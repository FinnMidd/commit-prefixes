{
  "name": "commit-prefixes",
  "displayName": "commit-prefixes",
  "description": "An extension that adds customizable buttons to the source control tab, allowing you to quickly apply commit message prefixes like 'Update:', 'Feature:', and 'Fix:' to streamline your version control process.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.fillCommitMessage",
        "title": "Fill Commit Message"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Commit Message Prefixes Configuration",
      "properties": {
          "myExtension.commitMessagePrefixes": {
              "type": "array",
              "description": "List of commit message prefixes.",
              "items": {
                  "type": "object",
                  "properties": {
                      "label": {
                          "type": "string",
                          "description": "Label for the prefix option."
                      },
                      "prefix": {
                          "type": "string",
                          "description": "The prefix string to add to commit messages."
                      },
                      "emoji": {
                          "type": "string",
                          "description": "Emoji representing the type of commit."
                      },
                      "active": {
                          "type": "boolean",
                          "description": "Whether the prefix is active.",
                          "default": true
                      }
                  },
                  "required": ["label", "prefix", "emoji", "active"]
              },
              "default": [
                  {
                      "label": "Feature",
                      "prefix": "Feature: ",
                      "emoji": "‚ú®",
                      "active": true
                  },
                  {
                      "label": "Bugfix",
                      "prefix": "Bugfix: ",
                      "emoji": "üêõ",
                      "active": true
                  },
                  {
                      "label": "Documentation",
                      "prefix": "Docs: ",
                      "emoji": "üìù",
                      "active": true
                  },
                  {
                      "label": "Refactor",
                      "prefix": "Refactor: ",
                      "emoji": "‚ôªÔ∏è",
                      "active": true
                  },
                  {
                      "label": "Performance",
                      "prefix": "Performance: ",
                      "emoji": "‚ö°",
                      "active": true
                  },
                  {
                      "label": "Test",
                      "prefix": "Test: ",
                      "emoji": "‚úÖ",
                      "active": true
                  },
                  {
                      "label": "Chore",
                      "prefix": "Chore: ",
                      "emoji": "üîß",
                      "active": true
                  },
                  {
                      "label": "Revert",
                      "prefix": "Revert: ",
                      "emoji": "‚è™",
                      "active": true
                  }
              ]
          },
          "myExtension.labelStyle": {
              "type": "string",
              "enum": ["fancy", "plain"],
              "default": "fancy",
              "description": "Label style for commit message prefixes."
          }
      }
  }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
